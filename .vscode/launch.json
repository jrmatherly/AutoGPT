{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend: Server Side",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder:[root]}/autogpt_platform",
      "command": "mise run frontend"
    },
    {
      "name": "Frontend: Client Side",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Frontend: Full Stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "mise run frontend",
      "cwd": "${workspaceFolder:[root]}/autogpt_platform",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "backend.app",
      "console": "integratedTerminal",
      "env": {
        "OBJC_DISABLE_INITIALIZE_FORK_SAFETY": "YES"
      },
      "envFile": "${workspaceFolder:[root]}/autogpt_platform/backend/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder:[root]}/autogpt_platform/backend",
      "python": "${workspaceFolder:[root]}/autogpt_platform/backend/.venv/bin/python"
    },
    {
      "name": "Backend: REST Server Only",
      "type": "debugpy",
      "request": "launch",
      "module": "backend.rest",
      "console": "integratedTerminal",
      "env": {
        "OBJC_DISABLE_INITIALIZE_FORK_SAFETY": "YES"
      },
      "envFile": "${workspaceFolder:[root]}/autogpt_platform/backend/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder:[root]}/autogpt_platform/backend",
      "python": "${workspaceFolder:[root]}/autogpt_platform/backend/.venv/bin/python"
    },
    {
      "name": "Backend: WebSocket Server Only",
      "type": "debugpy",
      "request": "launch",
      "module": "backend.ws",
      "console": "integratedTerminal",
      "env": {
        "OBJC_DISABLE_INITIALIZE_FORK_SAFETY": "YES"
      },
      "envFile": "${workspaceFolder:[root]}/autogpt_platform/backend/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder:[root]}/autogpt_platform/backend",
      "python": "${workspaceFolder:[root]}/autogpt_platform/backend/.venv/bin/python"
    },
    {
      "name": "Backend: Executor Service Only",
      "type": "debugpy",
      "request": "launch",
      "module": "backend.exec",
      "console": "integratedTerminal",
      "env": {
        "OBJC_DISABLE_INITIALIZE_FORK_SAFETY": "YES"
      },
      "envFile": "${workspaceFolder:[root]}/autogpt_platform/backend/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder:[root]}/autogpt_platform/backend",
      "python": "${workspaceFolder:[root]}/autogpt_platform/backend/.venv/bin/python"
    },
    {
      "name": "Backend: Tests (Current File)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--ignore=backend/blocks/llm_test.py",
        "--ignore=backend/blocks/test/test_block.py"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder:[root]}/autogpt_platform/backend/.env",
      "justMyCode": false,
      "cwd": "${workspaceFolder:[root]}/autogpt_platform/backend",
      "python": "${workspaceFolder:[root]}/autogpt_platform/backend/.venv/bin/python"
    }
  ],
  "compounds": [
    {
      "name": "Everything",
      "configurations": [
        "Backend",
        "Frontend: Full Stack"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "order": 0
      }
    }
  ]
}
